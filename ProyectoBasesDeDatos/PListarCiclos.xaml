<Page x:Class="ProyectoBasesDeDatos.PListarCiclos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProyectoBasesDeDatos"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Listar Ciclos Escolares">

    <Grid Background="White" Loaded="Grid_Loaded">
        <Label x:Name="label" Content="Ciclos Escolares" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid" Height="224" Margin="10,41,10,0" VerticalAlignment="Top" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding  Nombre}"/>
                <DataGridTextColumn Header="Inicio" Binding="{Binding FechaInicio}"/>
                <DataGridTextColumn Header="Fin" Binding="{Binding FechaFin}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnRegresar" Content="Regresar" HorizontalAlignment="Left" Margin="215,270,0,0" VerticalAlignment="Top" Width="75" Click="btnRegresar_Click"/>

    </Grid>
</Page>
